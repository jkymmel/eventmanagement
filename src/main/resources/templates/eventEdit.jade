extends ./partials/layout

block content
    +message(message)
    form(method="POST", action="/events/" + event.id)
        .form-group
            label.control-label Name
            input.form-control.form-control-lg(value=event.name, name="name")
        .form-group
            label.control-label Location
            select.form-control.form-control-lg(name="location.id")
                for location in locations
                    option(selected=(location.id.equals(event.location.id) ? 'selected' : ''), value=location.id)
                        #{location.name}
        p
            strong Time:
            input.form-control.datetime(value=timestampFormatter.format(event.startTime), name="startDate")
            | -&nbsp;
            //input.form-control.datetime(value=event.startDate, name="startDate")
        p
            strong Description:
            |  #{event.description}
        p
            strong Tickets available:
            |  #{event.ticketsAvailable}
        p
            strong State:
            |  #{event.state.name}
        p
            strong Categories:
            if event.categories
                for category in event.categories
                    +category(category)
        p
            strong Created at:
            |  #{timestampFormatter.format(event.createdAt)}
        p
            strong Created by:&nbsp;
            +inlinePerson(event.createdBy)
        .form-group
            button(type="submit").btn.btn-success Save