extends ./partials/layout

block content
    h1 Events
    table.table
        thead
            th ID
            th Name
            th Start time
            th Location
            th State
            th
        tbody
            for event in events
                tr
                    td #{event.id}
                    td #{event.name}
                    td #{timestampFormatter.format(event.startTime)}
                    td #{event.location}
                    td #{event.state}
                    td: a.btn.btn-info.btn-sm(href="events/" + event.id) Details